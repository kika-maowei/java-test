<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.maowei</groupId>
  <artifactId>utils</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources/commons</directory>
      </resource>
      <resource>
        <directory>src/main/resources/${resourcesPath}</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.kikakeyboard.waveform.athena.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <resourcesPath>dev</resourcesPath>
      </properties>
    </profile>
    <profile>
      <id>online</id>
      <properties>
        <resourcesPath>online</resourcesPath>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>maven_center</id>
      <url>http://192.168.100.71:8081/nexus/content/repositories/maven_center</url>
    </repository>
    <repository>
      <id>releases</id>
      <url>http://192.168.100.71:8081/nexus/content/repositories/releases/</url>
    </repository>
  </repositories>
  <properties>
    <slf4j.version>1.7.7</slf4j.version>
    <mybatis.version>3.2.6</mybatis.version>
    <maven-compiler-plugin.version>3.5.1</maven-compiler-plugin.version>
    <athena_query_kika_tool>1.0.2.RELEASE</athena_query_kika_tool>
    <maven.compiler.target>1.8</maven.compiler.target>
    <Athena-JDBC.version>1.0.RELEASE</Athena-JDBC.version>
    <log4j2.version>2.6.1</log4j2.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <spring.version>4.0.2.RELEASE</spring.version>
  </properties>
</project>

